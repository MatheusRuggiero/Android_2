<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/cardViewListPointTestPump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/cinza_claro_tecnomotor">

        <CheckBox
            android:id="@+id/checkBox_pump"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:checked="true"
            app:buttonTint="@color/dark_gray"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/description_point_pump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checkBox_pump"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/checkBox_pump"
            android:textColor="@color/blue_tecnomotor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Main Text" />

        <TextView
            android:id="@+id/txtRpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:text="@string/rpm"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtValueRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtRpm"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/txtRpm"
            tools:text="rotação"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>